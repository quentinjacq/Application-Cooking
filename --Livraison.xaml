<Window x:Class="Application_Cooking.Livraison"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Application_Cooking"
        mc:Ignorable="d"
        Title="Livraison" Height="400" Width="750" MaxHeight="400" MaxWidth="750" MinHeight="400" MinWidth="750">
    <StackPanel>
        <TextBlock Text="Livraion de " FontSize="22" FontWeight="Bold" Margin="0 50 0 20 " HorizontalAlignment="Center"/>
        
        <TextBlock Text="Sélectionner une quantité de ce produit (unité) " FontSize="18" FontWeight="Bold" Margin="0 20 0 20 " HorizontalAlignment="Center"/>
        <TextBox x:Name="Username" Padding="2" Width="300"  Margin="0 0 0 0" HorizontalAlignment="Center"/>
        <TextBlock Text="Choisisez un fourniseur" FontSize="18" FontWeight="Bold" Margin="0 20 0 20 " HorizontalAlignment="Center"/>
        
        <ComboBox HorizontalAlignment="Center" Margin="0 0 0 0" Width="200"/>

        <Button x:Name="Passer_la_Commande" Content="Passer la commande"  Width="150" Height="30" HorizontalAlignment="Center" Margin="0 20 0 0"/>
        <Button x:Name="Annuler" Content="Annuler"  Width="60" Height="20"  HorizontalAlignment="Right" Margin="0 0 60 0"/>

    </StackPanel>
</Window>
