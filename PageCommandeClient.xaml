<Window x:Class="Application_Cooking.PageCommandeClient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Application_Cooking"
        mc:Ignorable="d"
        Title="PageCommandeClient" Height="400" Width="750" Background="#D99355" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <!--on définit le quadrillage de la window pour savoir comment palcer les widgets-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="0.75*"/>
            <RowDefinition Height="0.75*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- on va d'abord placer tous les textes -->
        <TextBlock x:Name="Bonjour" Text="Bonjour " Grid.Column="0" Grid.Row="0" FontSize ="25" FontWeight="Bold" Margin="20 20 0 0 " />
        <TextBlock Text="Rechercher : " Grid.Column="0" Grid.Row="1" FontSize ="16" FontWeight="Bold" Margin="20 5 0 0 " />
        <TextBlock Text="Trier par : " Grid.Column="0" Grid.Row="2" FontSize ="16" FontWeight="Bold" Margin="40 0 0 0 " />

        <Button x:Name="Titre1" Content="Titre 1" Grid.Column="0" Grid.Row="3" FontSize ="14" FontWeight="Bold" Margin="200 0 10 0 " Click="Titre1_Click" >
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <TextBlock Text="{TemplateBinding Content}" TextDecorations="Underline" />
                </ControlTemplate>
            </Button.Template>
        </Button>
        <TextBlock x:Name="text1" Text="Trier par :aze rjkaz  aze azer azer azerazera azeraze razer azerazer azer aaze razer" Grid.Column="0" Grid.Row="3" FontSize ="10"  Margin="200 20 0 0 " TextWrapping="Wrap" />
        <TextBlock x:Name="prix1" Text="Prix cooks " Grid.Column="0" Grid.Row="3" FontSize ="10"  Margin="20 55 0 0 " />
        <Rectangle Grid.Column="0" Grid.Row="3" Fill="#eee" HorizontalAlignment="Left" Margin="20 2 0 0"  Grid.RowSpan="3" Stroke="Black" VerticalAlignment="Top" Width="160"  Height="55"/>

        <Button x:Name="Titre2" Content="Titre 2" Grid.Column="1" Grid.Row="3" FontSize ="14" FontWeight="Bold" Margin="200 0 10 0 " Click="Titre2_Click">
