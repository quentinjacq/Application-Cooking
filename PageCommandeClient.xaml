        <TextBlock x:Name="prix6" Text="Prix cooks " Grid.Column="1" Grid.Row="5" FontSize ="10"  Margin="20 55 0 0 " />
        <Rectangle Grid.Column="1" Grid.Row="5" Fill="#eee" HorizontalAlignment="Left" Margin="20 2 0 0"  Grid.RowSpan="3" Stroke="Black" VerticalAlignment="Top" Width="160"  Height="55"/>

        <TextBlock Text="Page" Grid.Column="1" Grid.Row="6" FontSize ="14"  TextDecorations="Underline" Margin="-17 0 0 0 " />

        <!-- on crée tous les boutons (profil, rechercher...) et les zones d'entrées-->
        <TextBox x:Name="Rechercher" Grid.Column="0" Grid.Row="1" Padding="2" Margin="130 10 0 0"/>
        <Button x:Name="recherche_txt" Content="☼" Grid.Column="1" Grid.Row="1" Margin="10 6 0 0" Height="20" Width="20" Grid.RowSpan="2" VerticalAlignment="Top" HorizontalAlignment="left" Click="recherche_txt_Click" />

        <ComboBox Name="Combobox_Commande" Grid.Column="0" Grid.Row="2" HorizontalAlignment="Left" Margin="130 5 0 5"  VerticalAlignment="Top" Width="120">
            <ComboBoxItem Content="Entrée"/>
            <ComboBoxItem Content="plat principal"/>
            <ComboBoxItem Content="Dessert"/>
            <ComboBoxItem Content="Boisson"/>
        </ComboBox>
        <Button x:Name="recherche_Combo" Content="☼" Grid.Column="0" Grid.Row="2" Margin="0 0 90 0" Height="20" Width="20" HorizontalAlignment="Right" Click="recherche_Combo_Click"/>

        <Button x:Name="Profil" Content="☻" Grid.Column="1" Grid.Row="0" Margin="0 0 40 0" Height="20" Width="20" HorizontalAlignment="Right" Click="Profil_Click"/>

        <Button x:Name="page_suiv" Content="→" Grid.Column="1" Grid.Row="6" Margin="20,4.4,0,0" Height="15" Width="20" HorizontalAlignment="Left" Grid.RowSpan="2" VerticalAlignment="Top" Click="page_suiv_Click"/>
        <Button x:Name="Page_prec" Content="←" Grid.Column="0" Grid.Row="6" Margin="0,4.4,20,0" Height="15" Width="20" HorizontalAlignment="Right" Grid.RowSpan="2" VerticalAlignment="Top" Click="Page_prec_Click" />

        <Button x:Name="Commander" Content="Commander" Grid.Column="0" Grid.Row="7" Margin="0 0 0 0" Height="25" HorizontalAlignment="Center" Grid.ColumnSpan="2"/>



    </Grid>
</Window>
