        <TextBlock x:Name="prix2" Text="Prix cooks " Grid.Column="1" Grid.Row="3" FontSize ="10"  Margin="20 55 0 0 " />
        <Rectangle Grid.Column="1" Grid.Row="3" Fill="#eee" HorizontalAlignment="Left" Margin="20 2 0 0"  Grid.RowSpan="3" Stroke="Black" VerticalAlignment="Top" Width="160"  Height="55"/>

        <Button x:Name="Titre3" Content="Titre 3" Grid.Column="0" Grid.Row="4" FontSize ="14" FontWeight="Bold" Margin="200 0 10 0 " Click="Titre3_Click">
