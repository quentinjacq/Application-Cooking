<Window x:Class="Application_Cooking.Page_renflouer_stocks"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Application_Cooking"
        mc:Ignorable="d"
        Title="Page_renflouer_stocks" Height="400" Width="750" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <Button x:Name="Profil" Content="☻" Margin="0 20 40 0" Height="20" Width="20" HorizontalAlignment="Right"/>
        <TextBlock Text="Les stocks des Produits Cooking" Grid.Column="0" FontSize ="25" FontWeight="Bold" Margin="40 0 0 20 " />
        
        <TextBlock Text="Liste des Produits" Grid.Column="0" FontSize ="18" FontWeight="Bold" Margin="-110 0 0 0 " HorizontalAlignment="Center"/>
        <ListBox Grid.Column="0" HorizontalAlignment="Center" Height="150" Margin="40 0 0 0" Width="300" Grid.ColumnSpan="2"/>
        
        <Button x:Name="Livraison" Content="Préparer une livraison" Margin="40 10 0 0" Height="40" Width="150" HorizontalAlignment="Center"/>
        <Button x:Name="RetourMenu" Content="Retour" Margin="80 10 40 0" Height="40" Width="80" HorizontalAlignment="Center"/>

    </StackPanel>
</Window>
